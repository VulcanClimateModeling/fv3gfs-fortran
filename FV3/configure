#!/bin/bash

function args()
{
    options=$(getopt  --long prefix: -- "$@")
    [ $? -eq 0 ] || {
        echo "Incorrect option provided"
        exit 1
    }
    eval set -- "$options"
    while true; do
        case "$1" in
        --prefix)
            PREFIX=$2;
            shift 1
            ;;
        --)
            shift
            break
            ;;
        esac
        shift
    done
}

args $0 $@

echo "PREFIX = ${PREFIX}" >> conf/configure.fv3